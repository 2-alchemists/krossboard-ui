{
  "compilerOptions": {
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "rootDir": "./src",
    "incremental": true,
    "lib": ["dom", "es2019"],
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  },
  "include": [
    "src"
  ]
}
